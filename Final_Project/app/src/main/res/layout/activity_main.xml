<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".Activity.MainActivity">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@+id/main_page_tittle_Tv"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/main_page_logo" />

    <TextView
        android:id="@+id/main_page_tittle_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_page_tittle"
        android:textSize="40sp"
        android:textColor="@color/main_page_title"
        android:gravity="center"
        android:layout_centerInParent="true"/>


    <TextView
        android:id="@+id/main_page_sub_tittle_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@id/main_page_tittle_Tv"
        android:layout_centerHorizontal="true"
        android:text="@string/main_page_sub_tittle"
        android:textStyle="italic"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/main_page_login_Btn"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Login"
            android:textStyle="bold" />

        <Button
            android:id="@+id/main_page_register_Btn"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Register"
            android:textStyle="bold"/>
    </LinearLayout>


</RelativeLayout>