<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/store_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">


    <ImageView
        android:id="@+id/chef_list_headPhoto_Iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="4"
        app:srcCompat="@drawable/chef_default_headphoto" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chef_list_storeName_Tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="storeName"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/chef_list_chefName_Tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:ellipsize="none"
                android:inputType="textMultiLine"
                android:layout_weight="2"
                android:text="chefName" />
        </LinearLayout>

        <RatingBar
            android:id="@+id/chef_list_storeRate_Rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="3"/>
    </LinearLayout>

</LinearLayout>