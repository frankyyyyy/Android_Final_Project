<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="80dp">


    <ImageView
        android:id="@+id/menu_list_cake_container_Iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"
        app:srcCompat="@drawable/cake_default_headphoto" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/menu_list_cake_container_cakeName_Tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/chat_room_chef"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/menu_list_cake_container_cart_Iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/add_to_cart" />
        </LinearLayout>

        <TextView
            android:id="@+id/menu_list_cake_container_cakeDescription_Tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="TextView" />
    </LinearLayout>


</LinearLayout>